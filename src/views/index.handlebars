<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
   <h1 class="text-center bg-success-subtle p-2 text-dark-emphasis bg-opacity-25 fst-italic W-100">Welcome to The Baby's Shop</h1>
  <h2 class="fw-bold text-center"></h2>
  <div>
    <div class="d-flex justify-content-evenly gap-3 w-100">
       <ul class="d-flex gap-3 fw-bold fst-italic" style="font-size: 50px;">

        <a href="#" class=" link-offset-2 link-underline link-underline-opacity-0">
            <li class="card shadow p-3 mb-5 bg-body-tertiary rounded border border-0 text-secondary" style= "--bs-text-opacity: .7;">FORMAS DE PAGO</li>
        </a>

        <a href="#" class=" link-offset-2 link-underline link-underline-opacity-0">
            <li class="card shadow p-3 mb-5 bg-body-tertiary rounded  border border-0 text-secondary" style= "--bs-text-opacity: .7;">ENVIOS GRATIS</li>
        </a>

        <a href="#" class=" link-offset-2 link-underline link-underline-opacity-0">
            <li class="card shadow p-3 mb-5 bg-body-tertiary rounded  border border-0 text-secondary" style= "--bs-text-opacity: .7;">GARANTIAS</li>
        </a>

        <a href="#" class=" link-offset-2 link-underline link-underline-opacity-0">
            <li class="card shadow p-3 mb-5 bg-body-tertiary rounded  border border-0 text-secondary" style= "--bs-text-opacity: .7;">SUCURSALES</li>
        </a>
        
       </ul>
    </div>
  </div>
  <section class="text-center m-3 w-100 d-flex flex-wrap justify-content-center gap-3">
    {{#each products}}
    <div class="card" style="width: 18rem;">
            <img src="{{this.photo}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">Category: {{this.category}}</p>
            <div class="card-body d-flex justify-content-around">
                <strong class="card-text">Price: {{this.price}}</strong>
                <strong class="card-text">Stock: {{this.stock}}</strong>
            </div>
            <a href="/products/{{this._id}}" class="btn btn-primary mt-auto">See more</a>
        </div>
    </div>
{{/each}}
  </section>
</main>


